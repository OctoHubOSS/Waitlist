## Next APP
NEXT_PUBLIC_APP_URL=http://localhost:3000

## Database URL
# Format: mysql://username:password@host:port/database
DATABASE_URL="mysql://user:password@localhost:3306/database_name"

## Next Auth
NEXTAUTH_URL=http://localhost:3000
# Generate a random string for these secrets
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_JWT_SECRET=your_jwt_secret_here

# Get these from GitHub OAuth App settings
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

## GitHub Stuff
# Personal access token with necessary scopes
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_API_URL=https://api.github.com/

# Email Configuration
# Example for Office 365
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_HOST=smtp.office365.com
EMAIL_USER=your_email@domain.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=Your App Name <noreply@yourdomain.com> 